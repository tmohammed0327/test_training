{% if styles.tagColors == 'greyscale' %}
{% assign blacklist = "red,orange,amber,yellow,lime,green,emerald,teal,cyan,sky,blue,indigo,violet,purple,fuchsia,pink,rose" | split: "," %}
 {% else %}
{% assign blacklist = "gray,zinc,neutral,red,green,lime,emerald,rose" | split: "," %}
{% endif %}
{% assign isDisqualified = false %}
{% for tag in tags %}
  {% if listings.disqualificationTags contains tag %}
    {% assign isDisqualified = true %}
  {% endif %}
{% endfor %}

<div class="c-tags flex flex-wrap gap-2 mt-2 py-4">
  {% for tag in tags %}
    {% if listings.availableTags contains tag and isDisqualified %}
      {% else %}
        
      <a href="/tag/{{tag | slug}}/" class="inline-block px-2 py-0.5 text-xs font-medium border-2 rounded-full transition 
    {% if listings.availableTags contains tag %}
 bg-green-100 text-green-700 border-green-700 hover:bg-green-200
 {% elsif listings.disqualificationTags contains tag %}
  bg-red-100 text-red-700 border-red-700 hover:bg-red-200
  {% else %}
    {{tag | tagColorFilter: blacklist}} 
{% endif %} ">
        {{ tag }}</a>
    {% endif %}
  {% endfor %}
</div>
