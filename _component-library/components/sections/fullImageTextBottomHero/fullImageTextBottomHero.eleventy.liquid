{% capture opacity %}after:bg-opacity-[{{ styles.backgroundOpacity }}%]
{% endcapture %}

<div class="c-fullImageTextBottomHero cs-w-full relative flex flex-col items-center min-h-screen overflow-hidden pb-16">
  {% if content.image %}
    <div class="absolute inset-0 -z-10 flex items-center justify-center after:contents[''] after:absolute after:inset-0 after:bg-black after:bg-op {{opacity}} ">
      {% bookshop "{{content.image._bookshop_name}}" bind: content.image class: "min-h-screen h-full w-screen object-cover" %}
    </div>
  {% endif %}
  <section class="basecontainer w-full flex flex-col h-full justify-end ">

    {% if content.sectionId %}
      {% bookshop "util/IdScrollEvent" sectionId: content.sectionId %}
    {% endif %}
    <div class=" text-white flex items-end justify-between flex-wrap gap-x-8">


      <div class="w-full max-w-[900px] lg:flex-1">
        <p class=" {% if content.highlightEybrow %} text-{{styles.color_group}}-accentcolor {% endif %} ">{{ content.eyebrow }}</p>
        <h1 class="lg:text-7xl md:text-5xl text-4xl font-bold">{{ content.headline }}</h1>
      </div>
      <div class=" w-full max-w-[350px] flex flex-col justify-end ">
        <p class="mt-3">
          {% if content.description %}
            {% bookshop "generic/textBlock" text: content.description %}{% endif %}
        </p>
        {% if content.buttons %}
          <div class="mt-3 flex w-full gap-8 flex-wrap">
            {% for button in content.buttons %}
              {% bookshop "{{button._bookshop_name}}" bind: button %}
            {% endfor %}
          </div>
        {% endif %}
      </div>
    </div>
  </section>
</div>